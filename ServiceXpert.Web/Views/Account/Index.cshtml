@model LoginUser
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-9 col-md-6 col-lg-3">
        <form method="post" id="login-form" role="form">
            <label for="login-username-field" class="form-label">
                Username
            </label>
            <input type="text" class="form-control mb-3" id="login-username-field" name="@nameof(LoginUser.UserName)" required/>
            <label for="login-password-field" class="form-label">
                Password
            </label>
            <input type="password" class="form-control mb-1" id="login-password-field" name="@nameof(LoginUser.Password)" required />
            <a href="#"><small>Forgot password?</small></a>
            <button type="submit" class="btn btn-success w-100 mt-4">Log in</button>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/login.js"></script>
}
