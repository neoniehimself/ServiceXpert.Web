@model List<Comment>

@foreach (var comment in Model)
{
    <div class="row mb-3">
        <div class="col-12">
            <div>
                <div class="d-flex flex-start">
                    @* <img class="rounded-circle border border-black mt-2 me-3" src="~/default-avatar.png" alt="Avatar" width="32" height="32" /> *@
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-person-circle text-secondary mt-2 me-3" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                    </svg>
                    <div>
                        <p class="fw-bold mb-0">
                            @comment.CreatedByUser!.FirstNameLastName
                            <span class="fw-normal small">- @comment.CreatedDateWithTimeFormatted</span>
                        </p>
                        <p class="mb-0">@comment.Content</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}